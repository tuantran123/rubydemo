<% path = ''
if @user.new_record?
	path = users_path
else
	path = @user
end
%>
<center>
<%= form_for(@user, :url => path) do |f| %>
<% if @user.errors.any? %>
<div id="error_explanation">
	<h2><%=pluralize(@user.errors.count,"error")%> prohibited this user form being saved:</h2>

	<ul>
		<% @user.errors.full_messages.each do |msg| %>
			<li><%=msg %></li>
			<% end %>
	</ul>
</div>
<%end %>

<div class="field">
	<%=f.label :name %><br/>
	<%=f.text_field :name %>
</div>
<div class="field">
	<%=f.label :email %><br/>
	<%=f.text_field :email %>
</div>
<div class="field">
	<%=f.label :description %><br/>
	<%=f.text_field :description %>
</div>
<div class="field">
	<%=f.label :address %><br/>
	<%=f.text_field :address %>
</div>
<div class="actions">
	<%=f.submit %>
</div>
<%end%>
</center>